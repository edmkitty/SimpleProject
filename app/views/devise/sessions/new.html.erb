<div class="d-flex justify-content-center">
  <div id="formContent" >
      <h2 >
        <span>Log in</span>
      </h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%# <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'loginTxt' %>
        </div>
        <br>
        <div class="field">
          <%# <%= f.label :password %>
          <%= f.password_field :password, placeholder: "Password", class: 'loginTxt' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: 'btn btn-primary loginBtn'  %>
        </div>
      <% end %>

      <div id="formFooter" class="d-flex">
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'p-2' %>
        <%= link_to "Forgot password?", new_password_path(resource_name), class: 'ml-auto p-2' %>
        <%# <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
